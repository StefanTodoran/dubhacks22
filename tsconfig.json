{
  "compilerOptions": {
    "module": "system",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outFile": "build/tsc.js",
    "sourceMap": true,
    "allowJs": true
  },
  "include": ["src/*.ts", "src/*.js"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
